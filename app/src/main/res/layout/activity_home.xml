<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suapp.ui.tablayout.HomeActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.gerenvip.ui.tablayout.TabLayoutExt
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:indicatorMode="fill"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabContentStart="0dp"
            app:tabGravity="center"
            app:tabIconTint="#00000000"
            app:tabIndicatorAdditionalPadding="0dp"
            app:tabIndicatorBlockStyleHorizontalMargin="0dp"
            app:tabIndicatorCornerRadius="0dp"
            app:tabIndicatorDrawable="@mipmap/ic_indicator_1"
            app:tabIndicatorFixedTop="false"
            app:tabIndicatorFixedWidth="80dp"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorMarginTop="0dp"
            app:tabIndicatorStyle="normal"
            app:tabIndicatorWidthFixed="false"
            app:tabMinWidth="74dp"
            app:tabMode="scrollable"
            app:tabOrientation="vertical">

